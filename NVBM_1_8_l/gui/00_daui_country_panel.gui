					onclick = "[InformationPanel.SelectTab('interactions')]"
				}
				blockoverride "fifth_button_visibility" {
					visible = "[And(Country.IsAIOrOtherPlayer,InformationPanel.IsTabSelected('interactions'))]"
				}
