template information_tab_visibility {
	visible = "[Or( And( Country.IsLocalPlayer, Not(Or(InformationPanel.IsTabSelected('diplomacy'), InformationPanel.IsTabSelected('modifiers')))), And( Country.IsAIOrOtherPlayer, Not(Or(Or(InformationPanel.IsTabSelected('politics'), InformationPanel.IsTabSelected('diplomacy')), InformationPanel.IsTabSelected('interactions')))))]"
}

template information_tab_visibility_not {
	visible = "[Not( Or( And( Country.IsLocalPlayer, Not(Or(InformationPanel.IsTabSelected('diplomacy'), InformationPanel.IsTabSelected('modifiers')))), And( Country.IsAIOrOtherPlayer, Not(Or(Or(InformationPanel.IsTabSelected('politics'), InformationPanel.IsTabSelected('diplomacy')), InformationPanel.IsTabSelected('interactions'))))))]"
}

template is_not_player_and_not_colonizable_country {
	visible = "[And(Not(Country.IsPlayer),Not(Country.IsColonizable))]"
}

### Checks if there are any triggers (GetDesc) or effects. Should only show up if there exists a target country context.
template diplo_action_triggers_and_effects_visibility {
	visible = "[Or(Not(StringIsEmpty(GetDesc(DiplomaticAction.ExecuteAction))), Not(StringIsEmpty(DiplomaticAction.GetEffectsDesc)))]"
}

template diplomatic_action_tooltip {
	tooltipwidget = {
		FancyTooltip_DiplomaticActionWithTargetCountry = {}
	}
}

template diplomatic_action_button_properties {
	enabled = "[IsValid(DiplomaticAction.ExecuteAction)]"
	onclick = "[DiplomaticAction.ExecuteWithConfirmation]"
	onclick = "[RightClickMenuManager.Close]"
	using = diplomatic_action_tooltip

	icon = {
		visible = "[DiplomaticAction.IsActivePact]"
		using = highlighted_square_selection
	}	
}

template diplomatic_action_button_after_label {
	hbox = {
		spacing = 10
		margin_right = 10

		hbox = {
			visible = "[Not(EqualTo_CFixedPoint(DiplomaticAction.GetMaintenanceCost, '(CFixedPoint)0'))]"
			spacing = 5

			icon = {
				size = { 25 25 }
				texture = "gfx/interface/icons/topbar/influence_icon.dds"
			}

			textbox = {
				align = nobaseline
				autoresize = yes
				raw_text = "#v [DiplomaticAction.GetMaintenanceCost|0]#!"
				min_width = 26
			}
		}

		widget = { #we always want the space to be occupied so that the Diplo cost is aligned, but the divider to show if needed
			layoutpolicy_vertical = expanding

			vertical_divider = {
				visible = "[And(Not(EqualTo_CFixedPoint(DiplomaticAction.GetMaintenanceCost, '(CFixedPoint)0')), And(DiplomaticAction.RequiresApproval, Not(DiplomaticAction.GetSecondCountry.IsPlayer)))]"
			}
		}

		widget = {
			size = { 30 30 }
			
			diplomatic_action_acceptance_icon = {
				visible = "[Not(DiplomaticAction.GetType.CanSelectAnyState)]"
			}
		}
	}
}

types country_panel_types
